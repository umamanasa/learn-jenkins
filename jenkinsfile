pipeline {
  //  agent any
  agent { node { label 'workstation' } }

    environment {
      TEST_URL = "google.com"
      SSH = credentials("centos-ssh")
    }

    stages {

        stage('Compile') {
            steps {
                echo TEST_URL
                echo SSH
            }
        }
    }
    post {
        always{
              echo 'post'
              // send email
             //update some JIRA status about the build
        }
    }
}